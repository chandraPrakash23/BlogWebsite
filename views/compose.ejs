<%- include("partials/header"); -%>

<h1>Compose</h1>
<form class="item" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" value="<%= title %>" type="text" name="textTitle" autocomplete="off">
    <label>Post</label>
    <textarea class="form-control" name="textBody" cols="40" rows="5"><%= content %></textarea>
  </div>
  <a href="/" class="btn btn-danger">Cancel</a>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


<%- include("partials/footer"); -%>
